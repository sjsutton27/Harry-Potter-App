<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/color_background"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/harryPotter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_max="150sp"
            app:layout_constraintHeight_max="150sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="4dp"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/harryPotter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:fontFamily="@font/harrington"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintStart_toEndOf="@id/harryPotter_image"
            app:layout_constraintTop_toTopOf="@id/harryPotter_image"
            app:layout_constraintBottom_toTopOf="@id/harryPotter_species"
            />
        <TextView
            android:id="@+id/harryPotter_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/cardview_light_background"
            android:fontFamily="@font/harrington"
            app:layout_constraintTop_toBottomOf="@id/harryPotter_name"
            app:layout_constraintStart_toStartOf="@id/harryPotter_name"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/harryPotter_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/cardview_light_background"
            android:fontFamily="@font/harrington"
            app:layout_constraintTop_toBottomOf="@id/harryPotter_species"
            app:layout_constraintStart_toStartOf="@id/harryPotter_species"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</FrameLayout>